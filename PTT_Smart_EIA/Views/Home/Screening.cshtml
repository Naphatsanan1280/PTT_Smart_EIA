    <script>

        $(document).ready(function () { 
             $("menubb").hover(function () {
                 $('.discription').slideDown(100);    
             });
        });

        function showDiv() {
            var x = document.getElementById("discription");
            if(x.style.display=="none") {
                x.style.display = "none";
            } else {
                x.style.display = "block";
            }
}


    </script>

